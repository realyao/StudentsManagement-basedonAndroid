<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e6e6e6"
    android:paddingBottom="10dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp">

    <!-- 登录后的管理员界面-->


    <TextView
        android:id="@+id/tv1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:text="欢迎使用"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv1"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:text="教师系统"
        android:textSize="20sp" />

    <com.example.he.studenmanagement.tools.RoundImageView
        android:id="@+id/pic"
        android:layout_width="50dp"
        android:layout_height="80dp"
        android:layout_alignParentRight="true"
        android:layout_marginTop="50dp"
        android:layout_toRightOf="@+id/tv1"
        android:layout_marginRight="10dp"
        android:src="@drawable/teacher"
        />

    <Button
        android:id="@+id/admin_activity_select"
        style="@style/common_button_style"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/admin_activity_add"
        android:layout_alignStart="@+id/admin_activity_add"
        android:layout_below="@+id/pic"
        android:layout_marginTop="58dp"
        android:background="@color/title_bar"
        android:text="查询学生信息" />


    <Button
        android:id="@+id/admin_activity_add"
        style="@style/common_button_style"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/tv2"
        android:layout_alignStart="@+id/tv2"
        android:layout_below="@+id/admin_activity_select"
        android:layout_marginLeft="48dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="36dp"
        android:background="@color/title_bar"
        android:text="添加学生信息" />


    <Button
        android:id="@+id/admin_activity_order"
        style="@style/common_button_style"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/admin_activity_add"
        android:layout_alignStart="@+id/admin_activity_add"
        android:layout_below="@+id/admin_activity_add"
        android:layout_marginTop="36dp"
        android:background="@color/title_bar"
        android:gravity="center"
        android:text="查看总成绩排名" />

    <TextView
        android:id="@+id/admin_activity_forceOffline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:text="强制下线"
        android:textColor="@color/vertical_sep_color"
        android:visibility="invisible" />

    <Button
        android:id="@+id/admin_addcourse"
        style="@style/common_button_style"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/admin_activity_add"
        android:layout_alignStart="@+id/admin_activity_add"
        android:layout_below="@+id/admin_activity_order"
        android:layout_marginTop="36dp"
        android:background="@color/title_bar"
        android:gravity="center"
        android:text="添加课程" />


</RelativeLayout>